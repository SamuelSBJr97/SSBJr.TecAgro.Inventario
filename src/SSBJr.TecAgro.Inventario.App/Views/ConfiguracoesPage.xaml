<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:vm="clr-namespace:SSBJr.TecAgro.Inventario.App.ViewModels"
    x:Class="SSBJr.TecAgro.Inventario.App.Views.ConfiguracoesPage"
    x:DataType="vm:ConfiguracoesViewModel"
  Title="Configuracoes">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
         
            <!-- Informacoes da Plataforma -->
 <Frame Padding="15" CornerRadius="8" BackgroundColor="{StaticResource Primary}">
            <VerticalStackLayout Spacing="5">
     <Label Text="Informacoes do Sistema" 
           FontSize="18" 
        FontAttributes="Bold"
    TextColor="White"/>
     <Label Text="{Binding PlataformaAtual, StringFormat='Plataforma: {0}'}" 
         TextColor="White"/>
    <Label Text="{Binding VersaoApp, StringFormat='Versao: {0}'}" 
    TextColor="White"/>
      </VerticalStackLayout>
   </Frame>

     <!-- Configuracao de Servidor -->
    <Label Text="Configuracao do Servidor" 
    FontSize="20" 
       FontAttributes="Bold"/>

     <Label Text="URL do Servidor API:" 
  FontSize="14"/>
       
     <Entry Placeholder="http://localhost:5000" 
       Text="{Binding ServerUrl}"
    Keyboard="Url"/>

   <Label Text="URLs por Plataforma:" 
    FontSize="12" 
  TextColor="Gray"/>
 
            <StackLayout Spacing="5" Padding="10,0">
       <Label Text="Android Emulator: http://10.0.2.2:5000" 
   FontSize="11" 
       TextColor="Gray"/>
          <Label Text="iOS/Windows/Mac: http://localhost:5000" 
    FontSize="11" 
    TextColor="Gray"/>
    <Label Text="Dispositivo Fisico: http://SEU_IP:5000" 
    FontSize="11" 
 TextColor="Gray"/>
        </StackLayout>

 <!-- Botoes de Acao -->
     <Button Text="Testar Conexao" 
 Command="{Binding TestarConexaoCommand}"
         BackgroundColor="{StaticResource Secondary}"/>

       <Button Text="Salvar Configuracoes" 
   Command="{Binding SalvarConfiguracoesCommand}"
    BackgroundColor="{StaticResource Primary}"/>

<Button Text="Restaurar Padrao" 
     Command="{Binding RestaurarPadraoCommand}"
      BackgroundColor="Gray"/>

            <!-- Dicas -->
<Frame Padding="15" CornerRadius="8" BorderColor="Orange">
     <VerticalStackLayout Spacing="5">
        <Label Text="Dicas:" 
    FontSize="16" 
     FontAttributes="Bold"
         TextColor="Orange"/>
  <Label Text="1. Use Testar Conexao para verificar se o servidor esta acessivel" 
 FontSize="12" 
   TextColor="Gray"/>
   <Label Text="2. Para Docker certifique-se de que os containers estao rodando" 
     FontSize="12" 
   TextColor="Gray"/>
       <Label Text="3. Em dispositivos fisicos use o IP da maquina host" 
   FontSize="12" 
     TextColor="Gray"/>
    <Label Text="4. Verifique firewall e portas abertas se houver problemas" 
   FontSize="12" 
      TextColor="Gray"/>
       </VerticalStackLayout>
      </Frame>

    </VerticalStackLayout>
    </ScrollView>
</ContentPage>
